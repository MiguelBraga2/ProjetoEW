extends layout

block content
    script. 
        var url = '#{url}';
    div(style="display:block; content:''; height: 60px;")
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.py-3.shadow.fixed-top
        .container
            a.navbar-brand(href='/') Acordãos

            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navmenu')
                span.navbar-toggler-icon

            .navbar-collapse.collapse#navmenu
                ul.navbar-nav.ms-auto
                    li 
                        a.nav-item.nav-link(href='/novoDocumento') Inserir Documentos
                    li
                        a.nav-item.nav-link(href='/pesquisas') Pesquisas
                    if user 
                        li
                            a.nav-item.nav-link(href='/users/' + user.id) Perfil
                    else
                        li 
                            a.nav-item.nav-link(href='/users/login') Iniciar Sessão
    // Acordãos
    section.py-5.text-center
        .container
            h1.py-5 Acordãos
            .row
                  .col-md-3.py-5 
                    .d-flex.justify-content-center
                        input.mt-2.mb-3.form-control(type='search' placeholder="Pesquisa Livre..." id="searchLivre")
                    .d-flex.justify-content-center
                        input.mb-3.form-control(type='search' placeholder="Número do Processo..." id="searchProcesso")
                    .d-flex.justify-content-center
                        input.mb-3.form-control(type='search' placeholder="Pesquise por Relator..." id="searchRelator")
                    .d-flex.justify-content-center
                        input.mb-3.form-control(type='search' placeholder="Pesquise por Descritores..." id="searchDescritores")
                  .col-md-9.py-5
                    .d-flex.justify-content-center    
                        ul.list-group.list-group-flush#resultsList 
                    .d-flex.justify-content-center
                        // Pagination
                        nav
                            ul.pagination
                                li.page-item
                                    a.page-link#previous Previous
                                li.page-item
                                    a.page-link#next Next

    script(type="text/javascript" src="/public/js/myScript.js")
    // Footer              
    footer.p-3.bg-light.text-center.mt-auto.position-relative.shadow
        .container 
            p.lead Copyright &copy; 2023 EngWeb, Acordãos
            a.position-absolute.bottom-0.end-0.p-3(href="#")
                i.fa-solid.fa-circle-arrow-up.h3(style="color: grey;")


