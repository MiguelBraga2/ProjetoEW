extends layout

block content
    div(style="display:block; content:''; height: 60px;")
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.py-3.shadow.fixed-top
        .container
            a.navbar-brand(href='/') Acordãos

            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navmenu')
                span.navbar-toggler-icon

            .navbar-collapse.collapse#navmenu
                ul.navbar-nav.ms-auto
                    li 
                        a.nav-item.nav-link(href='/novoDocumento') Inserir Documentos
                    li
                        a.nav-item.nav-link(href='/pesquisas') Pesquisas
                    if user 
                        li
                            a.nav-item.nav-link(href='/users/' + user.id) Perfil
                    else
                        li 
                            a.nav-item.nav-link(href='/users/login') Iniciar Sessão

    .container.mt-5 
        table.table
            thead 
                th.w-25
                    h4
                        i.fa-solid.fa-filter 
                        |  Filtros 
                th.w-75 
                    h4 Resultados da Pesquisa
            tbody
                tr 
                    td
                        .container 
                            form(action='/pesquisas')
                                .mb-3
                                    input.form-control(type='text' placeholder='Pesquisa Livre...' name='fullText')
                                .mb-3
                                    input.form-control(type='text' placeholder='Número do Processo...' name='processo')
                                .mb-3
                                    input.form-control(type='text' placeholder='Pesquisa por Relator...' name='realator')
                                .mb-3
                                    input.form-control(type='text' placeholder='Pesquisa por Descritores...' name='descritor')
                                .mb-3
                                    input.form-control(type='date' placeholder='Data de Acordão Superior a...' name='supData')
                                .mb-3
                                    input.form-control(type='date' placeholder='Data de Acordão Inferior a...' name='infDate')
                                
                                select.from-control#tribunais(name='ltribunais' multiple)
                                    option(value="1") Mustard
                                    option(value="2") Ketchup
                                    option(value="3") Relish            
                    td 
                        table.table.table-striped.table-hover
                            thead 
                                th Processo 
                                th Url 
                                th Tribunal 
                                th Relator 
                                th Descritores 
                                th Data 
                            tbody 
                                each acordao in lacordaos
                                    tr 
                                        td= acordao["Processo"]
                                        td= acordao["url"]
                                        td= acordao["tribunal"]
                                        td= acordao["Relator"]
                                        td
                                            if acordao["Descritores"]
                                                ul 
                                                    each descritor in acordao["Descritores"]
                                                        li= descritor
                                        td= acordao["Data"]
    // Footer
    footer.p-3.bg-light.text-center.mt-auto.position-relative.shadow
        .container 
            p.lead Copyright &copy; 2023 EngWeb, Acordãos
            a.position-absolute.bottom-0.end-0.p-3(href="#")
                i.fa-solid.fa-circle-arrow-up.h3(style="color: grey;")


                        


                
        
    