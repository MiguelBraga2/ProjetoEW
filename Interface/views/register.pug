extends layout

block content
  .container
    h2.mt-5.mb-5.text-center Registo na aplicação:
    .row.justify-content-md-center
      .col-xxl-5.col-xl-6.col-lg-7.col-md-9.col-xs-10
        form(action='/register' method='POST')
          .mb-3
            label.form-label(for='Nome Próprio') Nome Próprio:
            input.form-control#nome1(type="text" name='name')
          .mb-3
            label.form-label(for='Apelido') Apelido:
            input.form-control#apelido1(type='text')
          .mb-3
            label.form-label(for='Username') Username:
            input.form-control#username1(type="text" name='username')
          .mb-3
            label.form-label(for='Email') Email:
            input.form-control#email1(type="text" name='email')
          .mb-3
            label.form-label(for='Password') Password:
            input.form-control#password1(type='password' aria-describedby='forgotpassword' name='password')
          .dropdown.mt-4.mb-4
            button.btn.btn-outline-dark(type='button' data-bs-toggle='dropdown' aria-expanded='false').
              
              Qual cargo pretende efetuar?
              
            ul.dropdown-menu.dropdown-menu-dark
              li
                a.dropdown-item(href='#') Consumidor
              li
                a.dropdown-item(href='#') Produtor
          .row.mt-4.mb-2.m-2
            .form-check
              input.form-check-input#invalidCheck(type='checkbox' required)
              label.form-check-label(for='invalidCheck')
                .text(style='font-size: 15px;').
                  
                  Aceite os termos e condições.
                  
              .invalid-feedback.
                
                Deve aceitar os termos e condições antes de continuar.
                
          .text-center.mt-4.mb-2.m-2
            button.btn.btn-primary.mt-3(type='submit' style='width: 50%') Submit
